<MenuWidget>:
    canvas.before:
        Color:
            rgba:0,0,0,0.8
        Rectangle:
            size:self.size
    Label:
        font_size:dp(60)
        font_name:'fonts\Sackers-Gothic-Std-Light.ttf'
        text:root.parent.label_title
        pos_hint:{'center_x':0.5, 'center_y':0.6}
    Button:
        font_size:dp(30)
        font_name:'fonts\Eurostile.ttf'
        text:root.parent.button_title
        pos_hint:{'center_x':0.5, 'center_y':0.4}
        size_hint:.2,.1
        background_normal:""
        background_color:1,0.3,0.4,0.85
        on_press:root.parent.start_button()